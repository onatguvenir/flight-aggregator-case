# =====================================================================
# .env.local — Local geliştirici ortamı docker-compose değişkenleri
# Bu dosya git'e commit EDİLEBİLİR (gerçek secret içermiyor)
# =====================================================================

# Spring profili
SPRING_PROFILES_ACTIVE=local

# PostgreSQL
DB_URL=jdbc:postgresql://postgres:5432/flightdb
DB_USER=flightuser
DB_PASSWORD=flightpass

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# SOAP Providers (docker-compose servis adları)
PROVIDER_A_URL=http://flight-provider-a:8081/ws
PROVIDER_B_URL=http://flight-provider-b:8082/ws

# Cache TTL
CACHE_TTL_MINUTES=1

# Log seviyeleri
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING=DEBUG

# Pool boyutları
DB_POOL_MAX=5
DB_POOL_MIN=1
REDIS_POOL_MAX=5
