# =====================================================================
# .env.local — Local geliştirici ortamı docker-compose değişkenleri
# Bu dosya git'e commit EDİLEBİLİR (gerçek secret içermiyor)
# =====================================================================

# ===========================
# Spring
# ===========================
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8080

# ===========================
# PostgreSQL
# ===========================
DB_URL=jdbc:postgresql://postgres:5432/flightdb
DB_USER=flightuser
DB_PASSWORD=flightpass
DB_POOL_MAX=5
DB_POOL_MIN=1

# ===========================
# Redis
# ===========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_POOL_MAX=5

# ===========================
# SOAP Providers
# ===========================
PROVIDER_A_URL=http://flight-provider-a:8081/ws
PROVIDER_B_URL=http://flight-provider-b:8082/ws

# ===========================
# Cache
# ===========================
CACHE_TTL_MINUTES=1

# ===========================
# Security (JWT / OAuth2)
# false → Keycloak olmadan geliştirme için
# ===========================
SECURITY_ENABLED=false
JWT_ISSUER_URI=http://keycloak:8080/realms/flight

# ===========================
# Keycloak (Identity Provider)
# ===========================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# ===========================
# Rate Limiting (Bucket4j)
# ===========================
RATE_LIMIT_CAPACITY=60
RATE_LIMIT_REFILL=60

# ===========================
# Resilience4j — Circuit Breaker
# ===========================
CB_WINDOW_SIZE=10
CB_FAILURE_THRESHOLD=50
CB_WAIT_DURATION=30s

# ===========================
# Resilience4j — Retry
# ===========================
RETRY_MAX_ATTEMPTS=3

# ===========================
# Resilience4j — Bulkhead
# ===========================
BULKHEAD_MAX_CALLS=10

# ===========================
# Actuator / Monitoring
# ===========================
HEALTH_SHOW_DETAILS=always

# ===========================
# Swagger / OpenAPI
# ===========================
SWAGGER_ENABLED=true

# ===========================
# Grafana
# ===========================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ===========================
# Log Seviyeleri
# ===========================
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING=DEBUG
LOG_LEVEL_RESILIENCE=INFO
